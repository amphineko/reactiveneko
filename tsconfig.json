{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
        /* Bundler mode */
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "noEmit": true,
        "resolveJsonModule": true,
        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
    ],
}